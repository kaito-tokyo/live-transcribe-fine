 function(get_version)
-    file(READ ${CMAKE_CURRENT_SOURCE_DIR}/src/.version version)
-    string(STRIP ${version} version)
-    execute_process(COMMAND git log -n1 --format=%H src/.version
-                    WORKING_DIRECTORY ${CMAKE_CURRENT_SOURCE_DIR}
