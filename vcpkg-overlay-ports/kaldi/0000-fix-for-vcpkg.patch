+    execute_process(
+        COMMAND git log -n1 --format=%H src/.version
+        WORKING_DIRECTORY ${CMAKE_CURRENT_SOURCE_DIR}
+        OUTPUT_VARIABLE version_commit
+        RESULT_VARIABLE git_log_result
+        OUTPUT_STRIP_TRAILING_WHITESPACE
+        ERROR_QUIET
